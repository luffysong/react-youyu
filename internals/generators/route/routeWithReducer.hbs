 {
      path: '{{ path }}',
      name: '{{ camelCase component }}',
      getComponent(nextState, cb) {
        require.ensure([
          '../containers/{{ properCase component }}',
          '../containers/{{ properCase component }}/reducer',
          {{#if useSagas}}
          '../containers/{{ properCase component }}/sagas',
          {{/if}}
        ], (require) => {
          const component = require('../containers/{{ properCase component }}');
          const reducer = require('../containers/{{ properCase component }}/reducer').default;
          {{#if useSagas}}
          const sagas = require('../containers/{{ properCase component }}/sagas').default;
          {{/if}}

          injectReducer('{{ camelCase component }}', reducer);
          {{#if useSagas}}
          injectSagas(sagas);
          {{/if}}
          loadModule(cb, component);
        });
      },
    },$1
